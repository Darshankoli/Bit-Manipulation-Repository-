#include <stdio.h>

int main() {
    unsigned int x = 10;  // Initialize x with a value
    printf("x = %u\n", x); // Output the value of x

    unsigned int result = 0;  // Variable to store reversed bits
    unsigned int tmp = x;     // Temporary variable to manipulate the bits

    // Print binary representation of x
    printf("Binary number (x): ");
    for (int i = 15; i >= 0; i--) {
        printf("%d", (tmp >> i) & 1);
    }

    // Reverse the bits of x
    result = 0;
    tmp = x;
    for (int i = 0; i <= 15; i++) {
        result <<= 1;             // Shift result left
        result |= (tmp & 1);      // Set the least significant bit of result
        tmp >>= 1;                // Shift tmp right
    }

    // Print the binary representation of the reversed number
    printf("\nBinary number (reversed): ");
    tmp = result;  // Reuse tmp for printing the reversed number
    for (int i = 15; i >= 0; i--) {
        printf("%d", (tmp >> i) & 1);
    }

    printf("\n");

    return 0;
}
